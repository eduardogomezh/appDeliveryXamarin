<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="appDeliveryXamarin.Vista.MenuPrincipal.ViewBodyMenu">
    <Grid RowDefinitions="180,*" Padding="10">
    <Frame CornerRadius="15" HasShadow="False" Grid.Row="1">
        <StackLayout Margin="0,40,0,0" HorizontalOptions="Center">
            <Label Text="{Binding Descripcion}" FontAttributes="Bold" FontSize="20" TextColor="Black"/>
            <Label Text="Hot y Spicy" TextColor="Gray"/>
                <Label Text="{Binding Precio}"
                       TextColor="#E040FB" 
                       FontAttributes="Bold" FontSize="20"
                       HorizontalOptions="Center"/>
        </StackLayout>
    </Frame>
    <Image Source="{Binding Icon}" TranslationY="45"/>
    </Grid>
</ContentView>